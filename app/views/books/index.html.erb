<div>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, books_path(@book.id) %></td>
        <td><%= link_to book.body, books_path(@book.id) %></td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%= link_to "Destroy", books_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <label>Title</label>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  <label>Body</label>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
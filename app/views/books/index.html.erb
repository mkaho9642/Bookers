<h1>Books</h1>
<% @books.each do |book| %>
  <p>Title</p>
  <span>
    <%= book.title %>
  </span>
  <p>Body</p>
  <span>
    <%= book.body %>
  </span>
<% end %>

<p>Find me in app/views/books/index.html.erb</p>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>"Title"</p>
  <%= f.text_field :title %>
  <p>"Body"</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="error-text">
    <strong>
      <%= @book.errors.count %>errors prohibited this book from being saved
    </strong>
  </div>
  <div class="error-reason">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
<label>Title</label>
<div class="field">
  <%= f.text_field :title %>
</div>
<label>Body</label>
<div class="field">
  <%= f.text_area :body %>
</div>
<div class="field">
  <%= f.submit 'Update Book' %>
</div>
<div>
  <%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
</div>
<% end %>
